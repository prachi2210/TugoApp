<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/colorWhite</item>
        <item name="actionMenuTextAppearance">@style/StyleMenuNext</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimary</item>

        <!--        &lt;!&ndash; inactive thumb color &ndash;&gt;-->
        <!--        <item name="colorSwitchThumbNormal">@color/darkGray</item>-->

        <!--        &lt;!&ndash; inactive track color (30% transparency) &ndash;&gt;-->
        <!--        <item name="android:colorForeground">#42221f1f</item>-->
    </style>

    <style name="AppTheme.ActionBar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/font_raleway_semibold</item>
    </style>

    <style name="StyleMenuNext">
        <item name="android:textSize">@dimen/size_20</item>
        <item name="android:fontFamily">@font/font_raleway_semibold</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTheme" parent="Theme.AppCompat.Dialog">
        <item name="alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>//for font size
    </style>

    <style name="StyleButtonNext" parent="android:Widget.Material.Button.Colored">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/bg_rounded_border_colored</item>
        <item name="android:textSize">@dimen/size_14</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:paddingTop">@dimen/margin_5</item>
        <item name="android:paddingBottom">@dimen/margin_5</item>
        <item name="android:fontFamily">@font/font_sf_pro_text_bold</item>
    </style>

    <style name="StyleButtonBordered" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/colorScreenTitle</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/size_14</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:paddingTop">@dimen/margin_5</item>
        <item name="android:paddingBottom">@dimen/margin_5</item>
        <item name="android:fontFamily">@font/font_sf_pro_text_bold</item>
    </style>


    <style name="StyleButtonFb" parent="StyleButtonNext">
        <item name="android:textSize">@dimen/size_12</item>
        <item name="android:background">@drawable/bg_rounded_border_colored_fb</item>
    </style>

    <style name="StyleButtonGPlus" parent="StyleButtonNext">
        <item name="android:textSize">@dimen/size_12</item>
        <item name="android:background">@drawable/bg_rounded_border_colored_gplus</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
    </style>

    <style name="HeaderSmall">
        <item name="android:textColor">@color/colorLabel</item>
        <item name="android:textSize">@dimen/size_12</item>
        <item name="android:fontFamily">@font/font_sf_pro_text_regular</item>
    </style>

    <style name="HeaderMedium">
        <item name="android:textColor">@color/colorLabel</item>
        <item name="android:textSize">@dimen/size_16</item>
        <item name="android:fontFamily">@font/font_sf_pro_text_regular</item>
    </style>

    <style name="HeaderToolbar">
        <item name="android:textColor">@color/screenTitleColor</item>
        <item name="android:textSize">@dimen/size_20</item>
        <item name="android:layout_marginLeft">-10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/font_raleway_bold</item>
    </style>


    <style name="HeaderLarge">
        <item name="android:textColor">@color/colorLabel</item>
        <item name="android:textSize">@dimen/size_18</item>
        <item name="android:fontFamily">@font/font_sf_pro_text_regular</item>
    </style>

    <style name="HeaderOrderHistoryTitle">
        <item name="android:textColor">@color/colorScreenTitle</item>
        <item name="android:textSize">@dimen/size_18</item>
        <item name="android:fontFamily">@font/font_raleway_bold</item>
        <item name="android:textStyle">bold</item>

    </style>


    <style name="HeaderEmptyView">
        <item name="android:textColor">@color/emptyViewColor</item>
        <item name="android:textSize">@dimen/size_18</item>
        <item name="android:fontFamily">@font/font_raleway_semibold</item>
    </style>

    <style name="HeaderSemiMedium">
        <item name="android:textColor">@color/colorLabel</item>
        <item name="android:textSize">@dimen/size_14</item>
        <item name="android:fontFamily">@font/font_sf_pro_text_regular</item>
    </style>


    <style name="HeaderExtraLarge">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/size_20</item>
        <item name="android:fontFamily">@font/font_sf_pro_text_regular</item>
    </style>

    <style name="HeaderScreenTitle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/margin_36</item>
        <item name="android:fontFamily">@font/font_montserrat_bold</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="boxStrokeColor">@color/colorWhite</item>//boxBorderColor
        <item name="android:layout_marginTop">@dimen/margin_10</item>
        <item name="android:textAllCaps">true</item>
        <item name="hintTextAppearance">@style/StyleHintBig</item>
    </style>

    <style name="StyleHint" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/size_8</item>
        <item name="fontFamily">@font/font_sf_pro_text_regular</item>
    </style>

    <style name="StyleHintBig" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/size_12</item>
        <item name="fontFamily">@font/font_sf_pro_text_regular</item>
    </style>

    <style name="MyTextInputLayoutWithDropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/colorPrimary</item>//boxBorderColor
        <item name="android:layout_marginTop">@dimen/margin_10</item>
    </style>

    <style name="MyTextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:textColor">@color/inputTextColor</item>//textColor
        <item name="android:textSize">@dimen/size_16</item>//textSize
        <item name="android:fontFamily">@font/font_sf_pro_text_regular</item>
        <item name="android:textColorHint">@color/colorBlackOpacity</item>
        <item name="android:paddingTop">@dimen/margin_15</item>
        <item name="hintTextAppearance">@style/StyleHint</item>
    </style>

    <style name="MyTextInputPhoneNumberEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:textColor">@color/inputTextColor</item>//textColor
        <item name="android:textSize">@dimen/size_18</item>//textSize
        <item name="android:fontFamily">@font/font_sf_pro_text_regular</item>
        <item name="android:textColorHint">@color/colorBlackOpacity</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MyAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/size_14</item>
        <item name="android:padding">@dimen/margin_20</item>
        <item name="android:letterSpacing">1.8</item>
    </style>

    <style name="StyleSnackbar">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/font_raleway_semibold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="dialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:textColor">@color/inputTextColor</item>//textColor
        <item name="android:textSize">@dimen/size_16</item>//textSize
        <item name="android:fontFamily">@font/font_raleway_regular</item>
        <item name="android:textColorHint">@color/colorBlackOpacity</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="StyleWalkthroughTitle">
        <item name="android:textColor">@color/colorLabel</item>
        <item name="android:textSize">@dimen/size_24</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/font_raleway_bold</item>
    </style>

    <style name="StyleWalkthroughSubTitle">
        <item name="android:textColor">@color/walkthrough_subtitle</item>
        <item name="android:textSize">@dimen/size_16</item>
        <item name="android:fontFamily">@font/font_sf_pro_text_regular</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginLeft">1dp</item>
    </style>

    <style name="ProfileHeaderStyle">
        <item name="android:textColor">@color/colorScreenTitle</item>
        <item name="android:textSize">@dimen/size_16</item>
        <item name="android:fontFamily">@font/font_raleway_bold</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginLeft">1dp</item>
    </style>

    <style name="ProfileSubHeaderStyle">
        <item name="android:textColor">@color/walkthrough_subtitle</item>
        <item name="android:textSize">@dimen/size_14</item>
        <item name="android:fontFamily">@font/font_sf_pro_text_regular</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_border_bottom_sheet</item>
    </style>

    <style name="ThemeRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/colorD8D8D8</item>
        <item name="colorControlActivated">@color/colorYellow</item>
    </style>

    <color name="colorD8D8D8">#D8D8D8</color>
</resources>
