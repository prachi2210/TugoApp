<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <com.make.dots.dotsindicator.DotsIndicator
            android:id="@+id/dotsIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:padding="6dp"
            android:outlineSpotShadowColor="@color/colorPrimary"
            app:dot_tint="@color/colorPrimary"
            app:dot_drawable="@drawable/ic_dot_darkgrey"
            app:dot_drawable_unselected="@drawable/ic_dot_lightgrey"
            app:dot_height="8dp"
            app:dot_margin="6dp"
            app:dot_width="8dp" />

        <Button
            android:id="@+id/btnWalkthrough"
            style="@style/StyleButtonNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/margin_10"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/btn_next"
            app:layout_constraintTop_toBottomOf="@id/dotsIndicator" />
    </LinearLayout>
</layout>