<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgColor"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/bg_toolbar"
            android:orientation="horizontal">

            <TextView
                style="@style/HeaderSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/bg_rounded_border_colored"
                android:backgroundTint="@color/colorPrimary"
                android:paddingLeft="@dimen/margin_15"
                android:paddingTop="@dimen/margin_2"
                android:paddingRight="@dimen/margin_15"
                android:paddingBottom="@dimen/margin_4"
                android:text="@string/txt_delivers_on"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/deliveryDays"
                style="@style/HeaderMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:text=""
                android:textColor="@color/screenTitleColor" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_10"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:elevation="@dimen/margin_2"
                    app:cardElevation="@dimen/margin_2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/margin_10"
                        android:paddingTop="@dimen/margin_10"
                        android:paddingRight="@dimen/margin_10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/HeaderMedium"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/font_raleway_bold"
                                android:text="@string/txt_delivery_location" />

                            <TextView
                                android:id="@+id/btnEditAddress"
                                style="@style/HeaderSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/font_raleway_bold"
                                android:text="@string/txt_edit_address"
                                android:textColor="@color/colorPrimary" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/margin_15"
                            android:background="@color/grey" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txtAddress"
                                style="@style/HeaderSemiMedium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:maxLines="2"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="@dimen/margin_10"
                                android:layout_marginBottom="@dimen/margin_10"/>
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnAddAddressDeliveryScreen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/StyleButtonNext"
                                android:paddingLeft="@dimen/margin_10"
                                android:paddingRight="@dimen/margin_10"
                                android:layout_margin="@dimen/margin_10"
                                android:layout_centerInParent="true"
                                android:visibility="gone"
                                android:text="@string/txt_add_a_new_address"/>
                        </RelativeLayout>
                      </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@color/colorWhite"
                    android:elevation="@dimen/margin_2"
                    app:cardElevation="@dimen/margin_2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/margin_10"
                        android:paddingTop="@dimen/margin_10"
                        android:paddingRight="@dimen/margin_10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/HeaderMedium"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/font_raleway_bold"
                                android:text="@string/txt_starting_from" />

                            <TextView
                                android:id="@+id/txtDuration"
                                style="@style/HeaderSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/font_raleway_bold"
                                android:text="@string/txt_duration_days" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/margin_15"
                            android:background="@color/grey" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/llDeliveryStartDate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margin_10"
                                android:layout_weight="1"
                                android:background="@drawable/bg_date"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txtStartdate"
                                    style="@style/HeaderSemiMedium"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/margin_10"
                                    android:layout_weight="1"
                                    android:text="" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="@dimen/margin_15"
                                    android:src="@drawable/ic_calender" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/txtEnddate"
                                style="@style/HeaderSemiMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/margin_10"
                                android:text="@string/txt_end_date_is"
                                android:textColor="@color/emptyViewColor" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@color/colorWhite"
                    android:elevation="@dimen/margin_2"
                    android:layout_gravity="center"
                    app:cardElevation="@dimen/margin_2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_10"
                        android:gravity="center">

                        <TextView
                            style="@style/HeaderMedium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/font_raleway_bold"
                            android:text="@string/txt_delivery_time" />
                        <TextView
                            android:id="@+id/txtAvailableDeliveryTime"
                            style="@style/HeaderSemiMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_marginRight="@dimen/margin_5"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:text="" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:src="@drawable/ic_clock"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@color/colorWhite"
                    android:elevation="@dimen/margin_2"
                    app:cardElevation="@dimen/margin_2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/margin_10"
                        android:paddingTop="@dimen/margin_10"
                        android:paddingRight="@dimen/margin_10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/HeaderMedium"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/font_raleway_bold"
                                android:text="@string/txt_instructions_or_allergies" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_instructions" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/margin_15"
                            android:background="@color/grey" />

                        <EditText
                            android:id="@+id/txtDeliveryInstructions"
                            style="@style/HeaderSemiMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/screenTitleColor"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_marginBottom="@dimen/margin_10"
                            android:background="@null"
                            android:maxLines="2"
                            android:hint="@string/hint_add_instructions" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnOrderSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_order_summary"
                    android:layout_marginTop="@dimen/margin_20"
                    style="@style/StyleButtonNext"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>